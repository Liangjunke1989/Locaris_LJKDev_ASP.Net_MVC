@model Locaris_LJKDev_Asp.Net_MVC_Study.Models.Person
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <title>Add</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Add", "Person", FormMethod.Post))
        {

            @Html.TextBoxFor(p => p.Id);<br />
            @Html.ValidationMessageFor(p => p.Id);<br />
            @Html.TextBoxFor(p => p.Name);<br />
            @Html.ValidationMessageFor(p => p.Name);<br />
            @Html.TextBoxFor(p => p.Age);<br />
            @Html.ValidationMessageFor(p => p.Age);<br />
            <input type="submit" value="添加" />
        }
    </div>
</body>
</html>
